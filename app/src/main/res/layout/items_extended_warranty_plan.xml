<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="195dp">

            <RelativeLayout
                android:id="@+id/rl_warranty_name"
                android:layout_width="match_parent"
                android:layout_height="97dp">

                <RelativeLayout
                    android:id="@+id/rl_validity_button"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/imv_guarantee"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/guarantee" />
                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/rl_validity_button"
                    android:background="@color/light_gray" />

                <TextView
                    android:id="@+id/text_warranty_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@id/view"
                    android:fontFamily="@font/gillroy_semibold"
                    android:text="Extended Warranty &amp; Buyback Guarantee"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tv_view_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_warranty_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/gillroy_regular"
                    android:text="View Details"
                    android:textColor="@color/heading"
                    android:textSize="12dp" />

            </RelativeLayout>

             <RelativeLayout
                android:id="@+id/rl_amount"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_below="@id/rl_warranty_name"
                android:background="@color/violet_1">



                <TextView
                    android:id="@+id/tv_starts_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/gillroy_regular"
                    android:text="Starts From"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_inr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_starts_from"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="7dp"
                    android:fontFamily="@font/gillroy_regular"
                    android:text="INR "
                    android:textColor="@color/white"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/text_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_starts_from"
                    android:layout_marginBottom="18dp"
                    android:layout_toRightOf="@id/tv_inr"
                    android:fontFamily="@font/gillroy_bold"
                    android:text="15,000"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <View
                    android:id="@+id/view_amount"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/rl_validity_save"
                    android:background="@color/light_gray" />

                <RelativeLayout
                    android:id="@+id/rl_validity_save"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/tv_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gillroy_regular"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/tv_inr_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_save"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/gillroy_regular"
                        android:text="INR "
                        android:textColor="@color/white"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/text_save_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_save"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/gillroy_semibold"
                        android:text="â‚¹10000"
                        android:textColor="@color/white"
                        android:textSize="20dp" />


                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>