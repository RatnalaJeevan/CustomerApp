<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <carbon.widget.RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/light_grey_mar"
            >
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/r_l_status"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rl_background_1">

                <TextView
                    android:id="@+id/label_rec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/medium"
                    android:text="Recommended"
                    android:textColor="@color/dark_pink"
                    android:textSize="14dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >


            <RelativeLayout

                android:id="@+id/rl_select_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_margined"
                >


                <ImageView
                    android:id="@+id/white_check"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/tick_wd_bg"
                    android:visibility="invisible" />


            </RelativeLayout>
            <TextView
                android:id="@+id/tv_warranty_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_inr"
                android:text="Comprehensive Warranty"
                android:layout_toRightOf="@+id/rl_select_button"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:fontFamily="@font/semibold"/>

                <TextView
                    android:id="@+id/tv_valid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/tv_inr"
                    android:layout_below="@+id/tv_warranty_name"
                    android:text="Valid till"
                    android:layout_toRightOf="@+id/rl_select_button"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:fontFamily="@font/semibold"/>

            <TextView
                android:id="@+id/tv_inr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INR"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_amount"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:fontFamily="@font/regular"/>

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:fontFamily="@font/semibold"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:textSize="16dp"/>
            </RelativeLayout>
            <View

                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl1"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/cement" />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:lineSpacingExtra="2dp"
                android:layout_toRightOf="@+id/rl_select_button"
                android:layout_toLeftOf="@+id/tv_inr"
                android:layout_below="@id/view"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:textSize="14dp"
                android:textColor="@color/cement"
                android:fontFamily="@font/semibold"
                android:text=" "/>

            <TextView
                android:visibility="gone"
                android:id="@+id/add_on_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/semibold"
                android:text="6 months "
                android:textColor="@color/blue"
                android:textSize="14dp" />
        </carbon.widget.RelativeLayout>

</RelativeLayout>