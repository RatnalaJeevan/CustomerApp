<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="15dp"
        app:cardMaxElevation="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="185dp">
            <RelativeLayout
                android:id="@+id/r_l_status"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rl_background_1">

                <TextView
                    android:id="@+id/tv_status_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/gillroy_medium"
                    android:text="Recommended"
                    android:textColor="@color/dark_pink"
                    android:textSize="14dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_select_button"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/select">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/white_check"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/white_tick"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/white_check"
                        android:fontFamily="@font/gillroy_medium"
                        android:text="Select"
                        android:layout_centerVertical="true"
                        android:textColor="@color/middle_gray"
                        android:textSize="14dp" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/rl_select_button"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="12dp"
                android:background="@color/light_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view">

                <TextView
                    android:id="@+id/tv_warranty_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comprehensive Warranty"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:fontFamily="@font/gillroy_semibold"/>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_warranty_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="14dp"
                    android:fontFamily="@font/gillroy_regular"
                    android:layout_marginTop="6dp"
                    android:text="Shafts,Gears,Brake/Clutch Bands,Oil Pump ,Bearings, Bushes, Valves,DrivePlate,Transfer gear...."/>

                <TextView
                    android:id="@+id/tv_scratch_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_description"
                    android:text="INR 12,000"
                    android:textSize="15dp"
                    android:foreground="@drawable/strike"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/heading"
                    android:fontFamily="@font/gillroy_semibold"/>

                <TextView
                    android:id="@+id/tv_inr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INR"
                    android:layout_below="@id/tv_description"
                    android:layout_marginTop="33dp"
                    android:layout_toRightOf="@id/tv_scratch_amount"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:fontFamily="@font/gillroy_regular"/>

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10,000"
                    android:textColor="@color/black"
                    android:layout_below="@id/tv_description"
                    android:layout_marginTop="25dp"
                    android:layout_toRightOf="@id/tv_inr"
                    android:fontFamily="@font/gillroy_semibold"
                    android:layout_marginLeft="5dp"
                    android:textSize="22dp"/>

                <TextView
                    android:id="@+id/tv_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30%"
                    android:textColor="@color/red_1"
                    android:layout_below="@id/tv_description"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/tv_amount"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:fontFamily="@font/gillroy_semibold"/>

                <TextView
                    android:id="@+id/tv_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="off"
                    android:textColor="@color/red"
                    android:textSize="15dp"
                    android:fontFamily="@font/gillroy_semibold"
                    android:layout_below="@id/tv_description"
                    android:layout_toRightOf="@id/tv_percent"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="5dp"/>

            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>