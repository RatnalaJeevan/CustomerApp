<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
            android:id="@+id/rl_service_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_general_service_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="general Service Standard"
                android:textColor="@color/blue"
                android:layout_below="@id/tv_general_service_name"
                android:textSize="12dp"
                android:layout_marginTop="7dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/regular"
                android:layout_marginLeft="20dp"/>


            <ImageView
                android:visibility="gone"
                android:id="@+id/image_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/house" />

        <ImageView
            android:id="@+id/imv_guarantee"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/points_icon" />


        <TextView
            android:id="@+id/tv_general_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imv_guarantee"
            android:text="General Service"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:fontFamily="@font/regular"/>
            <View
                android:visibility="gone"
                android:id="@+id/view_service_one"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@id/tv_general_service_description"
                android:background="@color/grey"
                android:layout_marginTop="10dp"/>


        </RelativeLayout>

</RelativeLayout>