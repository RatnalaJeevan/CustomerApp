<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpCentre">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/arrow_back"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp">

        </ImageView>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Need Help?"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="10dp"
            android:fontFamily="@font/zonapro_regular"/>
        <TextView
            android:id="@+id/tv1_1"
            android:layout_below="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:maxLines="3"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Help Centre"
            android:textSize="22dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:fontFamily="@font/zonapro_bold"/>
        <ImageView
            android:layout_width="175dp"
            android:layout_height="136dp"
            android:layout_below="@+id/tv1_1"
            android:src="@drawable/help_centre"
            android:layout_centerHorizontal="true">

        </ImageView>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_marginTop="10dp"
        android:text="Tell us how we can help"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:fontFamily="@font/zonapro_bold"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_below="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLines="3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Our crew of superheroes are standing by  For services and support"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/blue"
        android:fontFamily="@font/zonapro_regular"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="7dp"
        android:elevation="10dp"
        android:layout_below="@+id/tv4">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_chat"
            android:layout_width="75dp"
            android:layout_height="64dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/chat_icon"
            >
        </ImageView>
        <TextView
            android:id="@+id/chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_chat"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Chat"
            android:textSize="18dp"
            android:fontFamily="@font/zonapro_bold">
        </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat_tv"
                android:layout_toRightOf="@+id/iv_chat"
                android:text="Start a Conversion now"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/zonapro_regular">
            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="7dp"
        android:elevation="10dp"
        android:layout_below="@+id/cv1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_faqs"
                android:layout_width="75dp"
                android:layout_height="64dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/faqs_icon"
                >
            </ImageView>
            <TextView
                android:id="@+id/faqs_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_faqs"
                android:text="FAQS"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/zonapro_bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/faqs_tv"
                android:layout_toRightOf="@+id/iv_faqs"
                android:text="Find Intelligent answer instantly"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/zonapro_regular">
            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="7dp"
        android:elevation="10dp"
        android:layout_below="@+id/cv2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="75dp"
                android:layout_height="64dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/email_icon"
                >
            </ImageView>
            <TextView
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_email"
                android:text="E mail"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/zonapro_bold">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_tv"
                android:layout_toRightOf="@+id/iv_email"
                android:text="Get the Solution become your inbox"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/zonapro_regular">
            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
