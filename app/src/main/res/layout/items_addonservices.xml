<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orange">

    <RelativeLayout
        android:id="@+id/rl_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/tick_white">

        </ImageView>
        <TextView
            android:id="@+id/tv_services"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv1"
            android:layout_marginLeft="10dp"
            android:gravity="start"
            android:text="Engine Oil"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:fontFamily="@font/zonapro_bold"
            >

        </TextView>


        <TextView
            android:id="@+id/partno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_services"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/iv1"
            android:layout_marginLeft="10dp"
            android:gravity="start"
            android:text="AD123456QWER098765FRSA"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:fontFamily="@font/zonapro_semibold"
            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/part_amount_paid"
            android:layout_marginTop="10dp"
            android:text="â‚¹"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:fontFamily="@font/zonapro_bold"
            >

        </TextView>
        <TextView
            android:id="@+id/part_amount_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="12,000.00"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:fontFamily="@font/zonapro_bold"
            >

        </TextView>
    </RelativeLayout>
    <View
        android:id="@+id/tv8"
        android:layout_below="@+id/rl_items"
        android:layout_marginLeft="55dp"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/lightgrey">
    </View>
</RelativeLayout>