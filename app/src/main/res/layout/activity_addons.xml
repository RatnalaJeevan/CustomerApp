<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addons"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/rl_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back"
            android:layout_marginLeft="20dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_addons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add-Ons"
            android:layout_toRightOf="@id/rl_back_button"
            android:layout_marginTop="25dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/gillroy_regular"/>

        <RelativeLayout
            android:id="@+id/rl_skip"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">


        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:layout_centerHorizontal="true"
            android:textColor="@color/blue"
            android:layout_marginTop="25dp"
            android:textSize="15dp"
            android:fontFamily="@font/gillroy_semibold"/>

        <View
            android:id="@+id/view"
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_skip"
            android:background="@color/violet"
            android:layout_marginRight="20dp" />
        </RelativeLayout>
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pay_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_heading"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/addons_pay_bacground"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_starts_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gillroy_regular"
                android:text="Amount"
                android:textColor="@color/blue"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_starts_from"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gillroy_regular"
                android:text="Discount Amount"
                android:textColor="@color/blue"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_inr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INR "
                android:layout_marginTop="14dp"
                android:layout_toStartOf="@+id/tv_amount_buy"
                android:fontFamily="@font/gillroy_regular"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv_amount_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/gillroy_semibold"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/tv_inr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INR "
                android:layout_below="@+id/tv_amount_buy"
                android:layout_marginTop="5dp"
                android:layout_toStartOf="@+id/tv_dis_amount"
                android:fontFamily="@font/gillroy_regular"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv_dis_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_below="@+id/tv_amount_buy"
                android:layout_marginTop="2dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/gillroy_semibold"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:layout_marginLeft="5dp"/>
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/tv_discount">

            </View>

            <TextView
                android:id="@+id/tv_total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/gillroy_regular"
                android:text="Total Amount"
                android:textColor="@color/blue"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/tv_inr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INR "
                android:layout_below="@+id/view1"
                android:layout_marginTop="12dp"
                android:layout_toStartOf="@+id/tv_total_amount"
                android:fontFamily="@font/gillroy_regular"
                android:textColor="@color/blue"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000"
                android:layout_below="@+id/view1"
                android:layout_marginTop="8dp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/gillroy_semibold"
                android:textSize="20dp"
                android:textColor="@color/blue"
                android:layout_marginLeft="5dp"/>
            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/pay_button"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@+id/tv_total_amount"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:text="Confirm"
                android:textSize="15dp"

                android:textColor="@color/white"
                android:fontFamily="@font/gillroy_semibold"
                android:background="@drawable/confirm_button"/>
        </RelativeLayout>

       <RelativeLayout
        android:id="@+id/rl_coupon_label"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/rl_pay_button"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/addons_pay_bacground"
        android:backgroundTint="@color/v_lightorange"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

           <ImageView
               android:id="@+id/iv1"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/coupon_image_orange"
               android:layout_centerVertical="true">

           </ImageView>

           <TextView
               android:id="@+id/apply_coupon_label"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Apply Coupon"
               android:layout_toEndOf="@+id/iv1"
               android:layout_centerVertical="true"
               android:layout_marginStart="10dp"
               android:fontFamily="@font/gillroy_semibold"
               android:textSize="18dp"
               android:textColor="@color/orange_dark"
               android:layout_marginLeft="5dp"/>

           <ImageView
               android:id="@+id/iv2"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/right_icon_orange"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true">

           </ImageView>
    </RelativeLayout>
      <RelativeLayout
        android:id="@+id/rl_coupon_applied"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/rl_pay_button"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@drawable/addons_pay_bacground"
        android:backgroundTint="@color/v_lightorange"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/coupon_image_orange"
            android:layout_centerVertical="true">

        </ImageView>

        <TextView
            android:id="@+id/coupon_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WISE1234"
            android:layout_toEndOf="@+id/iv3"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/gillroy_semibold"
            android:textSize="18dp"
            android:textColor="@color/orange_dark"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cross_red"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

        </ImageView>
    </RelativeLayout>
    <TextView
        android:id="@+id/coupon_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_coupon_applied"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gillroy_regular"
        android:text="Coupon applied successfully"
        android:textColor="@color/blue"
        android:textSize="16dp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_addons_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/coupon_label" />

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/idPBLoading"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

