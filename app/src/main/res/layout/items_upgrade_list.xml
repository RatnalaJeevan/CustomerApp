<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/new_app_bg">

    <carbon.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:elevation="2dp"
        app:carbon_cornerRadius="18dp">

        <TextView
            android:id="@+id/pack_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:lineSpacingExtra="2dp"
            android:fontFamily="@font/semibold"
            android:text="Comprehensive warranty + BuyBack Gurantee with ShowRoom Service"
            android:textColor="@color/black"
            android:textSize="15dp" />


        <RelativeLayout
            android:id="@+id/rl_ser_det"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/pack_name">
            <ImageView
                android:id="@+id/image_free"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/points_icon" />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/image_free"
                android:lineSpacingExtra="2dp"
                android:fontFamily="@font/semibold"
                android:text="@string/details"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_inr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pack_name"
            android:layout_toLeftOf="@+id/tv_amount_buy"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/regular"
            android:text="INR "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_amount_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pack_name"
            android:layout_marginRight="25dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/semibold"
            android:text="10,000"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <RelativeLayout
            android:id="@+id/rl_apply"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tv_amount_buy"
            android:layout_marginTop="10dp"
            android:background="@color/black">

            <RelativeLayout
                android:id="@+id/rl_upgra"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/white_mar_bg">
                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/iv_tick"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/white_tick">

                </ImageView>
                <TextView
                    android:id="@+id/tv_not_appluy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_tick"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/semibold"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="7dp"
                    android:paddingRight="30dp"
                    android:paddingBottom="7dp"
                    android:text="Upgrade"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </RelativeLayout>



        </RelativeLayout>
    </carbon.widget.RelativeLayout>
</RelativeLayout>