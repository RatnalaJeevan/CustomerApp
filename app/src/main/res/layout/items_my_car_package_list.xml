<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/relative_layout_services"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/blue_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="12dp">


                <ImageView
                    android:id="@+id/image_logo"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/blue_right" />



                <TextView
                    android:id="@+id/text_warranty_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comprehensive Warranty"
                    android:layout_marginLeft="10dp"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/gillroy_semibold"
                    android:layout_toRightOf="@id/image_logo"/>

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No claims pending"
                    android:layout_below="@id/text_warranty_name"
                    android:layout_marginLeft="10dp"
                    android:textSize="13dp"
                    android:fontFamily="@font/gillroy_regular"
                    android:textColor="@color/heading"
                    android:layout_toRightOf="@id/image_logo" />

                <ImageView
                    android:id="@+id/right_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/right_arrow_blue"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>