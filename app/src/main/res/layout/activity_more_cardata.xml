                android:text="Diesel"
                android:textColor="@color/black"
                android:textSize="12dp" />
            <View
                android:id="@+id/v2"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/more_details1"
                android:background="@color/black">

            </View>

            <TextView
                android:id="@+id/more_details2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/v2"
                android:fontFamily="@font/regular"
                android:text="Oct 2018"
                android:textColor="@color/black"
                android:textSize="12dp" />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_cnfrm_car"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/rl_car_info"
        android:background="@drawable/cardview_lightgrey_margined"
        >

        <TextView
            android:id="@+id/label_cnfm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/medium"
            android:text="Is this your car?"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/grey"
                android:fontFamily="@font/regular"
                android:text="Yes"
                android:textColor="@color/black"
                android:textSize="13dp"/>

            <RadioButton
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:buttonTint="@color/grey"
                android:fontFamily="@font/regular"
                android:text="No"
                android:textColor="@color/black"
                android:textSize="13dp"/>

        </RadioGroup>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_trans"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/rl_cnfrm_car"
        android:background="@drawable/cardview_lightgrey_margined"
        >

        <TextView
            android:id="@+id/label_tra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/medium"
            android:text="Transmission Type ?"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/grey"
                android:fontFamily="@font/regular"
                android:text="Manual"
                android:textColor="@color/black"
                android:textSize="13dp"/>

            <RadioButton
                android:id="@+id/auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:buttonTint="@color/grey"
                android:fontFamily="@font/regular"
                android:text="Auto"
                android:textColor="@color/black"
                android:textSize="13dp"/>

        </RadioGroup>

    </RelativeLayout>


