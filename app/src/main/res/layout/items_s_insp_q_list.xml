<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_cnfrm_car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="10dp"
        android:background="@drawable/cardview_lightgrey_margined"
        >

        <TextView
            android:id="@+id/tv_ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/medium"
            android:text="Where is your car last service?"
            android:textColor="@color/black"
            android:textSize="13dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_ans_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/tv_ques">

        </androidx.recyclerview.widget.RecyclerView>



    </RelativeLayout>
</RelativeLayout>