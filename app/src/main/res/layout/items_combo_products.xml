<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

     <RelativeLayout
            android:id="@+id/rl_service_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow">

            <TextView
                android:id="@+id/tv_comprehensive_warranty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/validity"
                android:text="General Service"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/gillroy_bold" />

            <TextView
                android:id="@+id/tv_comprehensive_warranty_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="general Service Standard"
                android:textColor="@color/black"
                android:layout_below="@id/tv_comprehensive_warranty"
                android:textSize="12dp"
                android:layout_marginTop="7dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/gillroy_regular"
                android:layout_marginLeft="20dp" />


         <TextView
             android:id="@+id/label"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Valid till"
             android:layout_marginTop="10dp"
             android:layout_marginEnd="15dp"
             android:textColor="@color/black"
             android:layout_alignParentEnd="true"
             android:textSize="12dp"
             android:includeFontPadding="false"
             android:fontFamily="@font/gillroy_regular"
             android:layout_marginLeft="20dp" />


         <TextView
             android:id="@+id/validity"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="6 months"
             android:layout_alignParentEnd="true"
             android:layout_below="@+id/label"
             android:textColor="@color/black"
             android:layout_marginTop="5dp"
             android:layout_marginStart="8dp"
             android:layout_marginEnd="10dp"
             android:textSize="16dp"
             android:includeFontPadding="false"
             android:fontFamily="@font/gillroy_bold" />
            <View
                android:id="@+id/view_service_one"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@id/tv_comprehensive_warranty_description"
                android:background="@color/grey"
                android:layout_marginTop="10dp" />

        </RelativeLayout>

</RelativeLayout>