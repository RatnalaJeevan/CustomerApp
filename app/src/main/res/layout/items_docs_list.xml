<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <carbon.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:outlineAmbientShadowColor="@color/new_app_bg"
        app:carbon_cornerRadius="12dp">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/doc_img" />

        <TextView
            android:id="@+id/doc_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_toRightOf="@+id/iv1"
            android:layout_toLeftOf="@+id/iv2"
            android:fontFamily="@font/semibold"
            android:text="Rc Card "
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/doc_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doc_name"
            android:layout_marginStart="15dp"

            android:layout_toRightOf="@+id/iv1"
            android:layout_toLeftOf="@+id/iv2"
            android:fontFamily="@font/regular"
            android:text="Front side"
            android:textColor="@color/description"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/semibold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/doc_appr" />
    </carbon.widget.RelativeLayout>
</RelativeLayout>