<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="173dp"
       app:cardCornerRadius="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:id="@+id/rl_combo_plans"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/additional_service">

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/services" />

            <TextView
                android:id="@+id/tv_additional_service_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_logo"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/gillroy_medium"
                android:gravity="center"
                android:text="Comprehensive Warranty  "
                android:textColor="@color/black"
                android:textSize="15dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/add_car"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_below="@id/tv_additional_service_plan"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buy_button"
                android:fontFamily="@font/gillroy_semibold"
                android:text="Select"
                android:layout_marginTop="10dp"
                android:textColor="@color/violet"
                android:textSize="14dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>