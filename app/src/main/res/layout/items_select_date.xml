<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_select_date"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/rl_date_background">
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/white_check"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/white_tick"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04 Feb,Mon"
            android:layout_centerInParent="true"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/white_check"
            android:fontFamily="@font/gillroy_medium"
            android:textColor="@color/heading"/>
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>